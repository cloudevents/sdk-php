{
    "name": "cloudevents/sdk-php",
    "description": "CloudEvents SDK",
    "type": "library",
    "license": "Apache-2.0",
    "support": {
        "issues": "https://github.com/cloudevents/sdk-php/issues",
        "source": "https://github.com/cloudevents/sdk-php"
    },
    "require": {
        "php": ">=7.4"
    },
    "autoload": {
        "psr-4": {
            "CloudEvents\\": "src/CloudEvents/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "CloudEvents\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "nunomaduro/collision": "^5.2",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "lint": "./vendor/bin/phpcs --standard=PSR12 ./src",
        "lint-fix": "./vendor/bin/phpcbf --standard=PSR12 ./src",
        "tests": "./vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
